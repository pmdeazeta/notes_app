angular.module('notesapp', ['notebookServices', 'noteServices', 'ui.directives']).
  config(['$routeProvider', function($routeProvider) {
  $routeProvider.
      when('/notebooks', {templateUrl: '<%= asset_path("notebooks.html") %>', controller: NotebooksCtrl}).
      when('/notebooks/:notebook_id/notes', {templateUrl: '<%= asset_path("notes.html") %>', controller: NotesCtrl}).
      otherwise({redirectTo: '/notebooks'});
}]);
